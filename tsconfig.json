{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es5",
        "noImplicitAny": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "declaration": true,
        "types": ["jasmine"],
        "outDir": "dist",
        "lib": [
            "dom",
            "es5",
            "es2015.iterable"
        ]
    },

    "rules": {
        "object-literal-sort-keys": false,
        "interface-name": false
    },

    "exclude": [
        "node_modules",
        "dist"
    ],

    "awesomeTypescriptLoaderOptions": {
        "forkChecker": true,
        "useWebpackText": true
    },

    "atom": {
        "rewriteTsconfig": false
    }
}
